<script>
  function flipToStudio() {
    const container = document.querySelector('.flip-container') || document.body;
    container.classList.add('flipping');
    setTimeout(() => {
      window.location.href = 'studio.html';
    }, 600);
  }
</script>
<button class="mullet-button" onclick="flipToStudio()" title="Business in front, party in back">

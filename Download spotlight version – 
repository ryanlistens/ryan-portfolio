<script>
  document.addEventListener("DOMContentLoaded", function () {
    const hvhText = document.getElementById("hvh-text");
    const flicker = document.getElementById("flicker");
    const slide = document.getElementById("slide");

    setTimeout(() => {
      hvhText.classList.add("show");
      if (flicker) flicker.play();
      if (slide) slide.play();
    }, 800); // Give background a moment to load

    const mullet = document.getElementById("mullet-flip");
    if (mullet) {
      mullet.addEventListener("click", function () {
        document.body.style.transition = "transform 0.6s";
        document.body.style.transform = "rotateY(180deg)";
        setTimeout(() => {
          window.location.href = "index.html";
        }, 400);
      });
    }
  });
</script>

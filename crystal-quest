        <div id="game-over-screen">
            <h1 class="screen-title">GAME OVER</h1>
            <p class="stats">Final Score: <span id="final-score">0</span></p>
            <p class="stats">Crystals Collected: <span id="final-crystals">0</span></p>
            <button class="menu-btn" id="restart-btn">TRY AGAIN</button>
            <button class="menu-btn" id="menu-btn">MAIN MENU</button>
        </div>

        <div id="level-complete-screen">
            <h1 class="screen-title">LEVEL COMPLETE!</h1>
            <p class="stats">Score: <span id="level-score">0</span></p>
            <p class="stats">Bonus: <span id="level-bonus">0</span></p>
            <button class="menu-btn" id="next-level-btn">NEXT LEVEL</button>
        </div>
